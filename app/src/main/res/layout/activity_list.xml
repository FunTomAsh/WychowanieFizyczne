<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/round_back_white10"
    tools:context=".LoadDay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#1F6BB8"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/back_btn"/>
        <TextView
            android:id="@+id/text_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="DzieÅ„"
            android:textColor="#FFFFFF"
            android:textSize="28dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>
    <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="vertical"
            android:padding="16dp"
            app:backgroundTint="@null">

            <TextView
                android:id="@+id/text_zad1"
                android:layout_width="378dp"
                android:layout_height="100dp"
                app:backgroundTint="@null"
                android:backgroundTint="#fefefe"
                android:padding="12dp"
                android:text="Push ups x15"
                android:textSize="28dp"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/text_zad2"
                android:layout_width="378dp"
                android:layout_height="100dp"
                app:backgroundTint="@null"
                android:backgroundTint="#fefefe"
                android:padding="12dp"
                android:textSize="28dp"
                android:text="Pull ups x10"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_zad3"
                android:layout_width="378dp"
                android:layout_height="100dp"
                app:backgroundTint="@null"
                android:backgroundTint="#fefefe"
                android:padding="12dp"
                android:text="Dips x20"
                android:textSize="28dp"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_zad4"
                android:layout_width="378dp"
                android:layout_height="100dp"
                app:backgroundTint="@null"
                android:backgroundTint="#fefefe"
                android:padding="12dp"
                android:text="Crumpets x30"
                android:textSize="28dp"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_zad5"
                android:layout_width="378dp"
                android:layout_height="100dp"
                app:backgroundTint="@null"
                android:backgroundTint="#fefefe"
                android:padding="12dp"
                android:text="10 000 steps"
                android:textSize="28dp"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:visibility="visible" />
        </GridLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Rozpocznij trening"
        android:textSize="28dp"
        android:layout_gravity="bottom"/>


</LinearLayout>
